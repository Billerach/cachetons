<h1>Vos structures</h1>
<p><%= link_to "Vos modèles de fiche de paie", job_profiles_url %></p>
<div id="companies_board_container">
  <% if @companies.present? %>
    <ul class='companies_board_title'>
      <% @companies.each do |company| %>
        <li>
          <div class="company_card">
            <%= link_to company.name, company_path(company) %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
   <p>Vous n'avez encore enregistré aucune structure.</p>
  <% end %>
  <div id="no_result">
    <%= simple_form_for(@company) do |f| %>
      <%= f.input :name, label: "Nom" %>
      <%= f.input :siret, label: "SIRET" %>
      <%= f.input :naf, label: "Code NAF" %>
      <%= f.input :address, label: "Adresse" %>
      <%= f.input :license_number, label: "Numéro de license" %>
      <%= f.button :submit, "Ajouter une structure", class: "company_create_form_button" %>
    <% end %>
  </div>
</div>
